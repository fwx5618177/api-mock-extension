{
  "manifest_version": 3,
  "name": "API Mock Extension",
  "version": "1.0",
  "description": "Intercept and modify API responses for flexible online mocking.",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "tabs",
    "activeTab",
    "cookies",
    "notifications",
    "alarms",
    "webNavigation",
    "identity",
    "contextMenus",
    "http://*/*",
    "https://*/*",
    "background",
    "bookmarks",
    "idle",
    "clipboardRead",
    "clipboardWrite"
  ],
  "background": {
    "scripts": "background.js",
    "persistent": true
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "main.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "API Mock Extension"
  }
}