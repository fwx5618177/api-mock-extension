{
  "compilerOptions": {
    "target": "es6",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "baseUrl": ".",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "types": ["chrome", "node"],
    "lib": ["es2017", "dom"],
    "jsx": "react",
    "paths": {
      "@/*": ["src/*"]
    },
    "isolatedModules": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "./vite.config.ts", "global.d.ts"]
}
